<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <com.example.android.camera.utils.AutoFitSurfaceView-->
<!--        android:id="@+id/view_finder"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="582dp" />-->
    <SurfaceView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="582dp" />
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:foreground="@android:color/transparent" />

    <ImageButton
        android:id="@+id/capture_button"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100px"
        android:background="@drawable/ic_shutter"
        android:contentDescription="@string/capture"
        android:scaleType="fitCenter" />

    <SeekBar
        android:id="@+id/seek_bar_frame"
        android:layout_width="154dp"
        android:layout_height="41dp"
        android:layout_gravity="bottom|center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="332dp"
        android:layout_height="142dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="350px"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imgFrame"
        android:layout_width="209dp"
        android:layout_height="432dp"
        android:layout_gravity="top|center"
        app:srcCompat="@drawable/imgframe"
        tools:srcCompat="@drawable/imgframe" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="700px"
        android:layout_width="240dp"
        android:layout_height="27dp" />

    <Button
        android:id="@+id/btn_change_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="相机切换" />

    <Button
        android:id="@+id/btn_change_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="数据流切换" />

</FrameLayout>