<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:text="bilibili:@Klta_卡"
        android:textSize="8sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--                <com.example.android.camera.utils.AutoFitSurfaceView-->
            <!--                    android:id="@+id/view_finder"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="608dp" />-->

            <SurfaceView
                android:id="@+id/view_finder"
                android:layout_width="match_parent"
                android:layout_height="508dp"
                android:layout_gravity="center|top" />

            <ImageView
                android:id="@+id/imgFrame"
                android:layout_width="209dp"
                android:layout_height="508dp"
                android:layout_gravity="top|center"
                app:srcCompat="@drawable/imgframe"
                tools:srcCompat="@drawable/imgframe" />

            <ImageButton
                android:id="@+id/capture_button"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="40dp"
                android:background="@drawable/ic_shutter"
                android:contentDescription="@string/capture"
                android:scaleType="fitCenter" />

            <SeekBar
                android:id="@+id/seek_bar_frame"
                android:layout_width="224dp"
                android:layout_height="41dp"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px" />


        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:rotation="90"
                        app:srcCompat="@drawable/ic_launcher" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="0dp" />


                </LinearLayout>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center"
                    android:layout_marginLeft="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageShow1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_border1"
                        android:padding="6dp"
                        app:srcCompat="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/imageShow2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_border1"
                        android:padding="0dp"
                        app:srcCompat="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/imageShow3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bg_border1"
                        android:padding="0dp"
                        app:srcCompat="@drawable/ic_launcher" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectedImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="0px"
                    android:text="Title"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewVersion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="0px"
                    android:text="Version"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewDs"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="0px"
                    android:text="DS"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:foreground="@android:color/transparent" />






</FrameLayout>